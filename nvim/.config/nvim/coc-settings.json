{
  "coc.preferences.formatOnSaveFiletypes": ["css", "Markdown", "yaml"],
  "coc.preferences.snippets.enable": true,
  "coc.preferences.useQuickfixForLocations": true,

  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.source.ultisnips.priority": 9999,

  "diagnostic.warningSign": "!",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": " # ",
    "diagnostic.refreshOnInsertMode": false,
  "diagnostic.refreshAfterSave": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.messageTarget": "echo",
  "diagnostic.enableSign": false,

  "list.source.files.excludePatterns": ["**/.git/**", "**/.ccls-cache/**"],
"yaml.linting.enabled": true,
  "coc.preferences.colorSupport": true,
  "highlight.colors.enable": true,
  "python.setInterpreter": "python3",
  "python.linting.enabled": true,
  "python.jediEnabled": true,
  "python.jediShortcut": "LS",
  "python.analysis.openFilesOnly": false,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.pydocstyleEnabled": true,
  "python.formatting.provider": "autopep8",
  "json.format.enable": true,
  "json.enable": true,
  "json.execArgv": ["--stdio"],
    "signature.target": "echo",
  "suggest.autoTrigger": "always",
"suggest.triggerAfterInsertEnter": true,
  "suggest.snippetIndicator": "â–º",
  "suggest.maxCompleteItemCount": 40,
  "suggest.labelMaxLength": 40,
  "suggest.floatEnable": false,
  "suggest.timeout": 5000,
  "suggest.localityBonus": true,
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    },
    "yaml": {
      "command": "yaml-language-server",
      "args": ["--stdio"],
      "trace.server": "verbose",
      "filetypes": ["yaml"],
      "format": {
        "singleQuote": true,
        "bracketSpacing": false,
        "enable": true,
        "proseWrap": "preserve"
      }
    }
  }
}

