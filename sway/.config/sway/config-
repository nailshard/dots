bindsym Alt+Print exec grim -c -g "$(~/bin/swaywin)" $(xdg-user-dir PICTURES)/Screenshots/$(date +'%Y-%m-%d-%H%M%S.png')
bindsym Ctrl+Print exec grim -c -g "$(slurp -d)" $(xdg-user-dir PICTURES)/Screenshots/$(date +'%Y-%m-%d-%H%M%S.png')

