output eDP-1 scale 1.25
output * bg ~/.config/sway/wall.png fill


gaps outer 16
gaps inner 16
smart_gaps off

#set $bg 	#b16286
set $bg 	#689d6a
set $bg-inactive   #3c3836
set $bg-urgent     #fb4934
set $text          #ebdbb2
set $text-inactive #bdae93

set $bar           #3c3836
set $statusline    #ebdbb2

client.focused          $bg           $bg          $text          $bg $bg
client.unfocused        $bg-inactive  $bg-inactive $text-inactive $bar $bar
client.focused_inactive $bg-inactive  $bg-inactive $text-inactive $bar $bar
client.urgent           $bg-urgent    $bg-urgent   $text          $bar $bar

bar {
	swaybar_command "~/.config/sway/bars"
#	position       top
}

#default_border pixel 3
default_floating_border pixel

# Variables
set $term alacritty
#set $menu bemenu-run -b -l 10 --fn Hack12
#set $menu j4-dmenu-desktop --dmenu="bemenu -i" --no-generic --term=kitty
bindsym mod4+d exec --no-startup-id bash -c \
    '~/.config/sway/alacritty_menu commands' # | xargs -r swaymsg -t command exec'\
    for_window [app_id="alacritty-menu"] floating enable
    #, \ resize set width 1000 px height 250 px
for_window [app_id="alacritty-menu"] floating enable, resize set width 100 ppt, move position 0 0

set $up k
set $down j
set $left h
set $right l

set $mod Mod4
floating_modifier Mod4

# Shortcuts
bindsym $mod+Return exec $term -e tmux
bindsym $mod+Shift+Return exec $term
#bindsym $mod+d exec $menu

bindsym $mod+Shift+x kill

