bindsym $mod+Shift+s layout tabbed


# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# change focus between tiling / floating windows
bindsym $mod+f exec wmfocus

mode "layout" {
    bindsym h split h
    bindsym j split v
    bindsym Tab split toggle
    bindsym space fullscreen toggle, mode "default"

    bindsym 4 layout stacking
    bindsym 3 layout tabbed
    bindsym 2 layout splith
    bindsym 1 layout splitv
    bindsym a layout toggle all
    bindsym f floating toggle, mode "default"

    bindsym $mod+f focus mode_toggle, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+backslash mode "default"
}

bindsym $mod+backslash mode "layout"
bindsym $mod+Tab exec rofi -show window
